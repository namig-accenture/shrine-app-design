<resources>

    <style name="TextAppearance.Shrine.Title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShrineButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ShrineTextField" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Widget.Shrine.Toolbar.Title</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.Shrine.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Shrine.Header" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Shrine.Subhead" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
